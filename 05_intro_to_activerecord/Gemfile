source "https://rubygems.org"

# Specify your gem's dependencies in ruby_fundamentals.gemspec

# loads the rake command line tool for interacting with our rake tasks via the terminal
gem "rake", "~> 12.0"

# allows requiring all files in a directory with a single call to `require_all "dir"`
gem "require_all", "~> 3.0"

# allows colored strings for nice output in the terminal
gem "colorize", "~> 0.8.1"

# allows us to do calculations on dates and times and convert integers to durations
gem "activesupport", "6.1"

# adds the sqlite3 gem for database interactions via ruby
gem "sqlite3", "~> 1.4"

# the activerecord gem pulls the ActiveRecord ORM into our project
gem "activerecord", "~> 6.1"

# gives us access to rake tasks like `rake db:migrate`
gem "sinatra-activerecord", "~> 2.0"
gem "pry", "~> 0.14.1"
